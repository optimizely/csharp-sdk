@model OptimizelySDK.DemoApp.Models.DemoViewModel
@{
	ViewBag.Title = "Shop";
}

@if (!string.IsNullOrEmpty(Model.Message))
{
	<div class="alert alert-success">@Model.Message</div>
}

<div class="container">
	@Html.Partial("_DemoMenu")

	<div class="container">
		<div class="card-header text-center">
			Variation: @Model.VariationKey
		</div>
		<div class="row grid-group">
			@foreach (var product in Model.Products)
			{
				<div class="item col-xs-3 col-lg-3" style="margin-bottom:45px;">
					<div class="thumbnail">
						<img class="img-fluid group list-group-image" style="width: 100%;height: 240px;" src="@Url.Content(product.ImagePath)" alt="@product.Name">
						<div class="caption">
							<h5 class="group inner list-group-item-heading">@product.Name</h5>
							<p class="group inner list-group-item-text"></p>
							<ul class="list-group list-group-flush">
								<li class="list-group-item">Color: @product.Color</li>
								<li class="list-group-item">Category: @product.Category</li>
							</ul>
							<p></p>
							<div class="row">
								<div class="col-xs-12 col-md-6">
									<p class="lead">@string.Format("{0:c}", product.Price)</p>
								</div>
								<div class="col-xs-12 col-md-6">
									<a href="Buy?visitorId=@Model.CurrentVisitor.Id&productId=@product.Id" class="btn btn-info">Buy Now</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>